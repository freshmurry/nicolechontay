<%= form_for [@pin, @pin.comments.build], :html => {:class => "w-100"}, remote: true do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field @pin, value: @pin %>
  <%= f.text_field :comment, class: "form-control comment-input border-0", placeholder: "Add a comment ...", autocomplete: :off %>
<% end %>